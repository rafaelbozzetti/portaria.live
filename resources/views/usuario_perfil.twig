{% extends 'app.twig' %}

{% block content %}

    <header class="page-header">
        <h2>Perfil do Usuário</h2>
    
        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li><span>Geral</span></li>                                
            </ol>
    
            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>

    <!-- start: page -->
        <div class="row">
            <div class="col-md-12">


              <section class="panel">
                  <form id="form1" class="form-horizontal" action="/admin/condominio" method="post">
                    <header class="panel-heading">
                        <div class="panel-actions">
                            <a href="#" class="fa fa-caret-down"></a>
                        </div>
                        <h2 class="panel-title">Informações do Condomínio</h2>
                        <p class="panel-subtitle"></p>
                    </header>
                    <div class="panel-body">
                        
                        {{ csrf_field() | raw }}

                        <div class="form-group">
                            <label class="col-sm-4 control-label">Nome: </label>
                            <div class="col-sm-8">
                                <input type="text" name="name" value="{{name}}" disabled class="form-control input-lg">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Endereço: </label>
                            <div class="col-sm-8">
                                <input type="text" name="address" value="{{address}}" disabled class="form-control input-lg">
                            </div>
                        </div>
                    </div>

                  </form>
              </section>   


              <section class="panel">
                  <form id="form1" class="form-horizontal" action="/admin/condominio" method="post">
                    <header class="panel-heading">
                        <div class="panel-actions">
                            <a href="#" class="fa fa-caret-down"></a>
                        </div>
                        <h2 class="panel-title">Informações de Acesso</h2>
                        <p class="panel-subtitle"></p>
                    </header>
                    <div class="panel-body">
                        
                        {{ csrf_field() | raw }}
                        <div class="form-group">
                            <label class="col-sm-4 control-label">E-mail: </label>
                            <div class="col-sm-8">
                                <input type="text" name="email" value="{{user_auth.email}}" class="form-control input-lg">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Nome: </label>
                            <div class="col-sm-8">
                                <input type="text" name="name" value="{{user_auth.name}}" class="form-control input-lg">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-4 control-label">Senha: </label>
                            <div class="col-sm-8">
                                <input type="text" name="password" disabled value="{{password}}" class="form-control input-lg">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-4 control-label">Repita a senha: </label>
                            <div class="col-sm-8">
                                <input type="text" name="second_password" disabled value="{{password}}" class="form-control input-lg">
                            </div>
                        </div>

                        <button type="button" onclick="changePassword();" class="btn btn-secundary pull-right" style="margin-top:10px;" >
                            Alterar a Senha
                        </button>

                    </div>

                    <footer class="panel-footer">
<!--                         <button type="button" onclick="changeInfo();" class="btn btn-primary btn-info-alter"> <i class="fa fa-check"></i> Alterar </button>
                        <button type="submit" class="btn btn-secundary btn-info-save"> <i class="fa fa-check"></i> Salvar </button> -->
                    </footer>
                  </form>
              </section>     
            </div>    
      

        </div>
    <!-- end: page -->

    <script type="text/javascript">
        function changePassword() {
            $('input[name="password"]').attr('disabled', false);
            $('input[name="second_password"]').attr('disabled', false);
        }
    </script>


{% endblock %}
